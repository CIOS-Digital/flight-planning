<Window x:Class="CIOSDigital.FlightPlanner.View.PopupText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CIOSDigital.FlightPlanner.View"
        mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" WindowStyle="None" ForceCursor="True" WindowStartupLocation="CenterScreen">
    <!--Title="PopupText" Height="300" Width="300">-->
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter an ID for the waypoint" />
            <TextBox x:Name="ResponseTextBox" PreviewKeyDown="ResponseTextBox_PreviewKeyDown"/>
            <Button Content="Ok" Click="OkButton_Click" />
            <Button Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
